            </div> 
            <div class="form-group">
                <label asp-for="LecturerId" class="control-label"></label>
                @* @Html.DropDownListFor(model => model.LecturerId, lecturerList, new { @class = "form-control" }) *@
                <select asp-for="LecturerId" class="form-control" asp-items="ViewBag.LecturerList"></select>
            </div>        
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

