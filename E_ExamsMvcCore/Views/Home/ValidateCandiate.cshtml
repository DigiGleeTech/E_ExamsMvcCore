@model E_ExamsMvcCore.Models.ViewModels.ValidateCandidateVM
@{
    ViewData["Title"] = "ValidateCandiate";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = ViewBag.CandidateMessage;
    var number = ViewBag.CandidateNumber;
}


<div class="container d-flex align-items-center justify-content-center vh-100">
    <form asp-action="ValidateCandiate" asp-controller="Home" class="row">
        <input type="hidden" id="message" value="@message" />
        <input type="hidden" id="number" value="@number" />
        <div class="center-box text-center form-group">
            <input type="text" asp-for="CandidateNumber" class="form-control col-md-8" placeholder="Enter Your Reg No">
        </div>
        <div class="form-group">
            <input type="submit" value="Validate" class="btn btn-primary btn-lg col-md-8" />
        </div>        
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            var message = $('#message').val();
            var number = $('#number').val();
            if (message != "") {
                Swal.fire(`Hello, ${number}!`, `${message}!`, 'error');
            }

        });
    </script>
}