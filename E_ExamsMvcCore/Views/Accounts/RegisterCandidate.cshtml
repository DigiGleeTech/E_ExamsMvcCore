@model E_ExamsMvcCore.Models.Candidate

@{
    ViewData["Title"] = "RegisterCandidateAsync";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = ViewBag.Message;
}

@if (message != "")
{
    <input type="hidden" id="message" value="@message"/>
}

<div class="container mx-auto col-md-10 justify-content-center pt-3 pb-5" style="background-color: #f0f0f0; box-shadow: 5px 5px 10px #888888;">


    <div class="justify-content-center text-uppercase text-success mt-5" style="">
        <h2 class="text-center">the federal polytechnic, bali</h2>
        <h3 class="text-center"> p.m.b 05, bali,  </h3>
        <h3 class="text-center"> taraba state  </h3>
    </div>

    <div class="row d-flex justify-content-center mt-5" >
        <div class="col">
            <form asp-action="RegisterCandidate" asp-controller="Accounts" id="RegisterCandidateForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row d-flex justify-content-around">

                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="SurName" class="control-label"></label>
                            <input asp-for="SurName" class="form-control" />
                            <span asp-validation-for="SurName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="OtherName" class="control-label"></label>
                            <input asp-for="OtherName" class="form-control" />
                            <span asp-validation-for="OtherName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <label asp-for="Gender">Gender</label>
                            <select class="form-control">
                                <option>Select Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                            @*  <input asp-for="Input.Gender" class="form-control" autocomplete="username" aria-required="true" placeholder="" /> *@
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Age" class="control-label"></label>
                            <input asp-for="Age" class="form-control" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="Address" class="control-label"></label>
                            <textarea asp-for="Address" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="DepartmentId" class="control-label"></label>
                            <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" id="userName" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <label asp-for="Password" class="control-label">Password</label>
                            <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <label asp-for="ConfirmPassword">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" id="RegisterCandidate" value="Register Candidate" class="btn btn-primary" />
                        </div>

                    </div>


                </div>


            </form>
        </div>
    </div>

</div>

@section Scripts{
    <script>
        $(document).ready(function () {

            var message = $('#message').val();
            if (message != "") {
                Swal.fire(`Hello, ${message}!`, 'Is already exist!', 'success');
            }
            
        });
    </script>
}